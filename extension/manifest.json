{
  "name": "Cover Letter Maker",
  "description": "test",
  "version": "0.0.0",
  "manifest_version": 2,
  "icons": {
    "16": "./images/get_started16.png",
    "32": "./images/get_started32.png",
    "64": "./images/get_started48.png",
    "128": "./images/get_started128.png"
  },
  "background": {
    "scripts": [
      "./background.js"
    ]
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "options_page": "./options.html",
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "coverletter.js"
      ]
    }
  ],
  "permissions": [
    "*://*/*",
    "tabs",
    "storage"
  ]
}